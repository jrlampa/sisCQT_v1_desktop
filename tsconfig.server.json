{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist/server",
    "rootDir": ".",
    "types": ["node"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": [
    "server.ts",
    "server/routes/**/*.ts",
    "server/controllers/**/*.ts",
    "server/middlewares/**/*.ts",
    "server/schemas/**/*.ts",
    "services/**/*.ts",
    "utils/**/*.ts",
    "constants.ts",
    "types.ts",
    "express.d.ts"
  ],
  "exclude": [
    "services/apiService.ts",
    "services/electricalWorker.ts",
    "services/electricalWorkerClient.ts",
    "services/gisService.ts",
    "services/kmlService.ts",
    "utils/projectUtils.ts",
    "tests/**",
    "**/*.test.ts",
    "src/**",
    "components/**",
    "context/**",
    "hooks/**",
    "App.tsx",
    "index.tsx",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}

